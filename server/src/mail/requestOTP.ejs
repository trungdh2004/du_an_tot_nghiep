      .body {
        width: 100%;
        margin: auto;
        font-family: sans-serif;
      }

      .box {
        max-width: 640px;
        margin: auto;
        min-height: 200px;
        border: 1px solid rgb(173, 173, 173);
        border-radius: 4px;
        background-color: white;
        overflow: hidden;
      }
      header {
        height: 60px;
        width: 100%;
        background-color: #111827;
        padding: 0 16px;
        align-items: center;
        display: flex;
        justify-content: start;
      }
      header h2 {
        color: white;
        margin-left: 10px;
        font-size: 20px;
      }
      .logo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        /* background-color: white; */
        margin-top: 10px;
      }

      .content {
        padding: 10px 20px;
      }
      .content p {
        font-size: 14px;
      }
      .content i {
        font-size: 12px;
      }
      footer {
        height: 60px;
        background-color: #111827;
        color: white;
        padding: 4px 16px;
      }
      footer p {
        font-size: 12px;
        margin: 0;
        font-weight: 300;
      }
      footer .contact {
        font-size: 14px;
        margin-top: 8px;
        font-weight: 500;
      }
    </style>
